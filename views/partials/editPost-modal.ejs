<div class="popup-wrapper">
  <div id="popup-container">
    <main class="mainPost">
      <div class="editDeleteBtns">
          <form action="/everdecision/classes/<%= showPost.character %>/post/<%= showPost._id %>?_method=PUT" method="POST">
            <div class="postName">
                <input class="input" type="text" id="name" name="name" placeholder="Whats your name?">
            </div>
            <div class="postTopic">
                <input class="input" type="title" id="title" name="title" placeholder="Title of Post">
            </div>
            <div class="postBody">
                <textarea class="txtarea" name="body" id="body" cols="30" rows="10" placeholder="Post a Topic to talk about"></textarea>
            </div>
            <div class="postImg">
                <input class="input" type="text" id="img" name="img" placeholder="Add a Link to an Image">
            </div>
            <button class="postThread" type="submit">UPDATE THREAD</button>
            <div class="modal-footer">
              <p><a class="onclick" herf="javascript:void(0)" onclick="toggle_visibility('popup-position');">Cancel</a></p>
            </div>
        </form>
      </div>
    </main>
  </div>
</div>